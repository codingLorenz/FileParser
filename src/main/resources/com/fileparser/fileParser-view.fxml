<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox alignment="CENTER" prefHeight="760.0" prefWidth="750.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fileparser.FileParserController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Button id="textButton" fx:id="fileButton" onAction="#onFileButtonClick" text="Choose a textfile"/>
    <ProgressBar fx:id="fileProgressbar" prefHeight="20.0" prefWidth="627.0" progress="0.0"/>
    <Button fx:id="startButton" mnemonicParsing="false" onAction="#onStartButtonClick" prefHeight="26.0"
            prefWidth="129.0" text="Start"/>
    <Button fx:id="abortButton" mnemonicParsing="false" onAction="#onAbortButtonClick" text="Cancel"/>
    <TableView fx:id="wordStatisticsTable" prefHeight="200.0" prefWidth="200.0"/>
</VBox>
